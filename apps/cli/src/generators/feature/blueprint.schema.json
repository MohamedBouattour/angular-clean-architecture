{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Clean Feature Blueprint",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the feature (e.g., product, user-profile)"
    },
    "models": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "attributes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "required": { "type": "boolean", "default": true }
              },
              "required": ["name", "type"]
            }
          }
        },
        "required": ["name"]
      }
    }
  },
  "required": ["name"]
}
